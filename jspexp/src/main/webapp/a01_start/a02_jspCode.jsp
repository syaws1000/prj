// 1. 클래스내에 기능 처리하는 함수를 선언하거나
// 2. 클래스안에 클래스를 정의하여 사용
// 3. 변수를 선언할 때 사용..
int num01 = 25;
// 함수 정의
int plus(int no1, int no2){
	return no1 + no2;
}
// 클래스 선언.
class Person{
	private String name;
	private int age;
	Person(String name, int age){
		this.name = name;
		this.age = age;
	}
	String getName(){
		return name;
	}
	int getAge(){
		return age;
	}
}
%>
